<odoo>
    <record id="grades_courses_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">grades.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="grades_courses_list_view" model="ir.ui.view">
        <field name="name">grades.course.list</field>
        <field name="model">grades.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name"/>
                <field name="student_qty"/>
                <field name="grase_avarage"/>
                <field name="description"/>
                <field name="is_active"/>
                <field name="course_start"/>
                <field name="course_end"/>
                <field name="last_evaluation_date"/>
                <field name="course_image"/>
                <field name="course_shift"/>
            </list>
        </field>

    </record>
        <record id="grades_courses_form_view" model="ir.ui.view">
        <field name="name">grades.course.form</field>
        <field name="model">grades.course</field>
        <field name="arch" type="xml">
            <form string="Courses">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="student_qty"/>
                            <field name="grase_avarage"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                            <field name="course_start"/>
                            <field name="course_end"/>
                        </group>
                        <group>
                            <field name="last_evaluation_date"/>
                            <field name="course_image"/>
                            <field name="course_shift"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>