<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.ext</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="is_teacher"/>
            </field>
            <xpath expr="//field[@name='vat']/.." position="inside">
                <field name="is_freelance"/>
            </xpath>
        </field>
    </record>

    <record id="teacher_list_view" model="ir.ui.view">
        <field name="name">teacher.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="display_name"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

	<record id="teacher_form_view" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="display_name"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_teacher', '=', True)]</field>
        <field name="view_ids" eval="[(5,0,0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('teacher_list_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('teacher_form_view')})
        ]"/>
    </record>
</odoo>